{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>aquaproj/aqua-renovate-config#2.3.0",
        "config:recommended",
        "docker:pinDigests",
        "helpers:pinGitHubActionDigests",
        ":pinDevDependencies"
    ],
    "packageRules": [
        {
            "groupName": "aqua devDependencies",
            "matchFileNames": [
                "aqua.yml",
                "aqua.yaml"
            ],
            "excludePackageNames": [
                "hashicorp/terraform"
            ],
            "automerge": true
        },
        {
            "groupName": "aws-sdk-go-v2",
            "matchPackagePrefixes": [
                "github.com/aws/aws-sdk-go-v2"
            ]
        },
        {
            "matchPackagePatterns": [
                "aquaproj/aqua-installer",
                "actions/*",
                "aws-actions/*",
                "google-github-actions/*",
                "terraform-linters/*"
            ],
            "automerge": true
        }
    ]
}
